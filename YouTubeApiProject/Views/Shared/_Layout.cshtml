<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YouTubeApiProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YouTubeApiProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="StyleSheet.css" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: lavender; /* Lavender for entire background */
            margin: 0;
            padding: 0;
        }

        header {
            background-color: lavender;
            color: lavender;
            padding: 20px;
            text-align: center;
            margin-bottom: 20px;
        }

        nav {
            background-color: lavender;
        }

        .navbar-brand, .navbar-nav .nav-link {
            color: indigo !important;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 20px;
        }

        .container {
            padding: 0 10px;
            background-color: lavender;
            border-radius: 10px;
            margin: 10px auto;
        }

        
        footer {
            background-color: lavender; /* Lavender background for footer */
            padding: 10px;
            text-align: center;
            color: #333;
        }

        .footer-container {
            background-color: white; /* White background for footer container */
            border-radius: 0px;
            padding: 0px;
          
        }

        footer a {
            color: #800080;
        }

            footer a:hover {
                color: #4B0082;
            }

        button {
            background-color: #800080;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #4B0082;
            }

        .search-bar {
            display: flex;
            justify-content: center;
            padding: 20px 0;
        }

            .search-bar input {
                padding: 10px;
                width: 300px;
                border-radius: 5px;
                border: 1px solid #ccc;
            }

            .search-bar button {
                margin-left: 10px;
            }

        /* Image container styling */
        .image-container {
            position: relative;
            text-align: center;
            margin-top: 20px;
        }
        
        .image-container img {
            width: 500px; /* Resize width */
            height: auto; /* Maintain aspect ratio */
            border-radius: 0;
            
        }
    

            

        
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Fatini's Page</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Youtube" asp-action="Index">Search music</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <!-- Image from Google -->
        <div class="image-container">
            <img src="https://i.pinimg.com/originals/47/5b/59/475b59c61a6efb3ec8ac0a57e43fd03b.webp" alt="Welcome" />
            <br /><br /><br />
        </div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer-container">
            &copy; 2024 - Fatini's Page - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
